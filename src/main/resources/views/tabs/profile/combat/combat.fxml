<?import javafx.geometry.Insets?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <CheckBox fx:id="enabledCheckBox" mnemonicParsing="false" text="Enabled" />
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <children>
            <Hyperlink fx:id="mapHyperlink" text="Map:" />
                <ComboBox fx:id="mapComboBox" prefWidth="180.0" />
            </children>
        </HBox>
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <children>
                <Label prefHeight="16.0" prefWidth="159.0" text="Repair threshold (%):" />
                <Spinner fx:id="repairThresholdSpinner" editable="true" prefWidth="75.0" />
            </children>
        </HBox>
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <Label prefHeight="16.0" prefWidth="159.0" text="Battle timeout (s):" />
            <Spinner fx:id="battleTimeoutSpinner" editable="true" prefWidth="75.0" />
         </children>
      </HBox>
      <HBox spacing="10.0">
         <children>
            <Label prefHeight="16.0" prefWidth="215.0" text="Enable one-click repair:" />
              <CheckBox fx:id="enableOneClickRepairCheckBox" mnemonicParsing="false" />
         </children>
      </HBox>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</VBox>
